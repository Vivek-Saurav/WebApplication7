@model List<WebApplication7.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Add new Customer", "Create", "Customers")

<h2>Customer Details</h2>

<table class="table table-bordered table-hover">
    <tr>
        @*<th>Customer ID</th>*@
        <th>Name</th>
        <th>Membership Type</th>
        <th>Action</th>
        @*<th>DateOFBirth</th>*@
    </tr>
    <tbody>
        @foreach (var i in Model)
        {<tr>
             @*<td>
                 @i.ID                
             </td>*@
             <td>
                 @Html.ActionLink(i.Name, "Details", "Customers", new { id=i.ID},null)
             </td>
        <td>
            @i.MembershipType.MembershipTypeName
        </td>
      <td>
          @Html.ActionLink("Edit", "Edit", "Customers", new { Id = i.ID},null)
      </td>
        </tr>
        }
    </tbody>
</table>