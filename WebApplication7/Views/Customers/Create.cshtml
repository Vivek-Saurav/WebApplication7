@model WebApplication7.ViewModel.CustomerMembershipViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Customer.Name, "", new { @class="text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.DateOfBirth)
        @*@Html.TextBoxFor(c=>c.Customer.DateOfBirth, new { @class="form-control"})*@
        @Html.EditorFor(c => c.Customer.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(c=>c.Customer.DateOfBirth,"", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipType)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeID, new SelectList(Model.MembershipTypes, "ID", "MembershipTypeName"), "--Select--", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.MembershipTypeID,"", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" name="cmdSubmit" value="Add new" class="btn btn-pr" />
    </div>
}