@model WebApplication7.ViewModel.MoviesGenreViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Name)
        @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Movie.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateAdded)
        @Html.EditorFor(c => c.Movie.DateAdded, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(c=>c.Movie.DateAdded, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateReleased)
        @Html.EditorFor(c => c.Movie.DateReleased, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(c => c.Movie.DateReleased, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.GenreID)
        @Html.DropDownListFor(c => c.Movie.GenreID, new SelectList(Model.Genres, "ID", "Name"), "--Select--", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Movie.GenreID, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Stock)
        @Html.EditorFor(c => c.Movie.Stock, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(c => c.Movie.Stock, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" name="cmdSubmit" value="Add new" class="btn btn-pr" />
    </div>
}