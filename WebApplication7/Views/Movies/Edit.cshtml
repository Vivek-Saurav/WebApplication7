@model WebApplication7.ViewModel.MoviesGenreViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(c=>c.Movie.ID)

    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Name)
        @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateAdded)
        @Html.TextBoxFor(c => c.Movie.DateAdded,new { @class = "form-control" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateReleased)
        @Html.TextBoxFor(c => c.Movie.DateReleased,  new { @class = "form-control" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.GenreID)
        @Html.DropDownListFor(c => c.Movie.GenreID, new SelectList(Model.Genres, "ID", "Name"), "--Select--", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Stock)
        @Html.EditorFor(c => c.Movie.Stock, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" name="cmdSubmit" value="Save Changes" class="btn btn-pr" />
    </div>
}

